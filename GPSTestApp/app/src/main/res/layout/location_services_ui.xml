<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">


    <TextView
        android:id="@+id/textView_header1_play_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="1"
        android:text="Google Play Services" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_lat_play_services"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lat" />

        <TextView
            android:id="@+id/show_lat_play_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Null"/>

        <TextView
            android:id="@+id/textView_lon_play_services"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lon"/>

        <TextView
            android:id="@+id/show_lon_play_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_speed_play_services"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Spd" />

        <TextView
            android:id="@+id/show_spd_play_services"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:text="Null"
            android:layout_weight="0.14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Acc"
            android:id="@+id/textView_acc_play_services"
            android:layout_weight="0.22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Null"
            android:id="@+id/show_acc_play_services" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_activity_play_services"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Act"/>

        <TextView
            android:id="@+id/show_activity_play_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Null"/>
    </LinearLayout>

    <ToggleButton
        android:id="@+id/btn_service_switcher"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textOn="Stop"
        android:textOff="Start"
        android:layout_gravity="center_horizontal" />

</LinearLayout>